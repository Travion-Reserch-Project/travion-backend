# Auto detect text files and perform LF normalization
* text=auto

# TypeScript
*.ts text eol=lf

# JavaScript
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
.env* text eol=lf
*.config.js text eol=lf
*.config.ts text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
